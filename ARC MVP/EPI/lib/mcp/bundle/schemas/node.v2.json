{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.mcp.ai/node.v2.json",
  "title": "MCP Node v2",
  "description": "Schema for MCP node.v2 format",
  "type": "object",
  "properties": {
    "kind": {
      "type": "string",
      "const": "node"
    },
    "type": {
      "type": "string",
      "description": "Node type (e.g., ChatSession, ChatMessage)"
    },
    "id": {
      "type": "string",
      "description": "Unique stable identifier for the node"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the node was created"
    },
    "content": {
      "type": "object",
      "description": "Node content data",
      "properties": {
        "title": {
          "type": "string",
          "description": "Human-readable title"
        },
        "text": {
          "type": "string",
          "description": "Text content"
        },
        "mime": {
          "type": "string",
          "description": "MIME type for content"
        }
      },
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the node",
      "additionalProperties": true
    },
    "schema_version": {
      "type": "string",
      "const": "node.v2"
    }
  },
  "required": ["kind", "type", "id", "timestamp", "schema_version"],
  "additionalProperties": false
}
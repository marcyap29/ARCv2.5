# Uncomment this line to define a global platform for your project
platform :ios, '16.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  # MediaPipe Tasks for Gemma models (temporarily disabled due to linker errors)
  # pod 'MediaPipeTasksGenAI', '~> 0.10.24'
  # pod 'MediaPipeTasksText', '~> 0.10.21'

  # ZIP extraction for model downloads
  pod 'ZIPFoundation', '~> 0.9'

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  # 1) Normalize all Pods: sim + device, no sim arch exclusions
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      config.build_settings['SUPPORTED_PLATFORMS'] = 'iphonesimulator iphoneos'
      # Override for FFmpeg - exclude arm64 from simulator
      if target.name.include?('ffmpeg_kit')
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      else
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = ''
      end
      config.build_settings.delete('VALID_ARCHS')
      config.build_settings.delete('VALID_ARCHS[sdk=iphonesimulator*]')
      config.build_settings.delete('VALID_ARCHS[sdk=iphoneos*]')

      # Additional FFmpeg framework simulator compatibility fix
      if target.name.include?('ffmpeg_kit')
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
        config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'NO'
      end
    end
  end

  # 2) Xcode 15+ / Runner target tweaks
  installer.generated_projects.each do |project|
    project.targets.each do |t|
      t.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
        if t.name == 'Runner'
          config.build_settings['ENABLE_BITCODE'] = 'NO'
          config.build_settings['OTHER_LDFLAGS'] = ['$(inherited)', '-lc++', '-ObjC']
          config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
          config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
        end
      end
    end
  end

  # 3) Make Runner ignore plugin-bundled frameworks (use Pods XCFramework slices)
  installer.aggregate_targets.each do |agg|
    next unless agg.name == 'Pods-Runner'
    agg.user_targets.each do |user_target|
      next unless user_target.name == 'Runner'

      # Clean search paths so Xcode doesn’t crawl the plugin’s Frameworks dir
      user_target.build_configurations.each do |config|
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] = ['$(inherited)']
        config.build_settings['LIBRARY_SEARCH_PATHS']   = ['$(inherited)']
        paths = Array(config.build_settings['FRAMEWORK_SEARCH_PATHS'])
        paths.reject! { |p| p.to_s.include?('.symlinks/plugins/ffmpeg_kit_flutter_new_min_gpl/ios/Frameworks') }
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] = paths.uniq
      end

      # Remove any direct linkage to the plugin-bundled ffmpegkit.framework
      # so the linker uses the Pod’s xcframework slice instead.
      user_target.build_phases.each do |phase|
        next unless phase.respond_to?(:files)
        phase.files.to_a.each do |bf|
          ref = bf.file_ref
          next unless ref && ref.path
          if ref.path.to_s.include?('ffmpegkit.framework')
            phase.remove_build_file(bf)
          end
        end
      end
    end
  end
end

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.mcp.ai/edge.v1.json",
  "title": "MCP Edge v1",
  "description": "Schema for MCP edge.v1 format",
  "type": "object",
  "properties": {
    "kind": {
      "type": "string",
      "const": "edge"
    },
    "source": {
      "type": "string",
      "description": "Source node ID"
    },
    "target": {
      "type": "string",
      "description": "Target node ID"
    },
    "relation": {
      "type": "string",
      "description": "Type of relationship (e.g., contains, mentions, references)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the edge was created"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the edge",
      "properties": {
        "order": {
          "type": "integer",
          "minimum": 0,
          "description": "Order index for ordered relationships"
        }
      },
      "additionalProperties": true
    },
    "schema_version": {
      "type": "string",
      "const": "edge.v1"
    }
  },
  "required": ["kind", "source", "target", "relation", "timestamp", "schema_version"],
  "additionalProperties": false
}